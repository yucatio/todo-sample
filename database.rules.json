{
  "rules": {
    "todos" : {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid",
        "$todoId": {
          ".validate": "newData.hasChildren(['text', 'completed'])",
          "text": {
            ".validate": "newData.isString()"
          },
          "completed": {
            ".validate": "newData.isBoolean()"
          },
          "$other": { ".validate": false }
        }
      }
    },
    "users": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid"
      }
    },
    "recentUpdatedTodos": {
      ".read": true,
      ".write": false
    },
    "$other": { ".validate": false }
  }
}
